<h2><%= page_caption %></h2>
<%= form_for [:account, @user]  do |f| %>
<h3>Параметры пользователя</h3>
<%= f.label "Имя" %><br />
<%= f.text_field :first_name %><br />
<%= f.label "Фамилия" %><br />
<%= f.text_field :last_name %><br />
<%= f.label :email %><br />
<%= f.text_field :email %><br />
<%= f.label "Телефон" %><br />
<%= f.text_field :phone %><br />
<%= f.submit "Сохранить" %>
<% end %>




